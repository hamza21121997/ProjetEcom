{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Sexe</th>
                <th>Adresse</th>
                <th>CodePostale</th>
                <th>Ville</th>
                <th>TelMobile</th>
                <th>TelFixe</th>
                <th>AdresseEntreprise</th>
                <th>EtatCompte</th>
                <th>Cle</th>
                <th>TypeCompte</th>
                <th>Deleted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.sexe }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.codePostale }}</td>
                <td>{{ user.ville }}</td>
                <td>{{ user.telMobile }}</td>
                <td>{{ user.telFixe }}</td>
                <td>{{ user.adresseEntreprise }}</td>
                <td>{{ user.etatCompte }}</td>
                <td>{{ user.cle }}</td>
                <td>{{ user.typeCompte }}</td>
                <td>{{ user.deleted }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
